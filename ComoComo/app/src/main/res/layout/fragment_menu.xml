<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundReceta">

    <!-- Título o encabezado de la pantalla -->
    <TextView
        android:id="@+id/tv_titulo_menu_semanal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menú Semanal"
        android:textSize="24sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textStyle="bold" />


    <DatePicker
        android:id="@+id/datePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_titulo_menu_semanal"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="31dp"
        android:layout_marginTop="71dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="70dp"
        android:datePickerMode="calendar"
        android:background="@color/colorPrimaryDark"
        style="@style/CustomDatePickerStyle" />


    <View
        android:id="@+id/bottom_navigation_margin"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:visibility="invisible" />

</RelativeLayout>